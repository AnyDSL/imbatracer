extern "C" {
    fn debug_abort(&[u8]) -> ();
    // TODO : remove this when impala supports auto pointers
    fn thorin_free(&[u8]) -> ();

    fn put_float(float) -> ();
    fn put_int(int) -> ();
    fn puts(&[u8]) -> ();
}

fn is_debug() -> bool {
    false
}

fn assert(cond: fn () -> bool, msg: &[u8]) -> () {
    if @is_debug() {
        if !@cond() {
            debug_abort(msg);
        }
    }
}

