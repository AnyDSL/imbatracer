struct BBox
{
    cmin : Point,
    cmax : Point
}

fn bboxUnsafe(a : Point, b : Point) -> BBox
{
    BBox{ cmin:a, cmax:b }
}

fn bbox(a : Point, b : Point) -> BBox
{
    bboxUnsafe(@ppmin(a, b), @ppmax(a, b))
}

fn bbextend(bb : BBox, p : Point) -> BBox
{
    bbox(ppmin(bb.cmin, p), ppmax(bb.cmax, p))
}
