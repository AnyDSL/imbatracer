struct BBox
{
    cmin : Point,
    cmax : Point
}

fn bboxUnsafe(a : Point, b : Point)
{
    BBox{ cmin:a, cmax:b }
}

fn bbox(a : Point, b : Point)
{
    bboxUnsafe(@ppmin(a, b), @ppmax(a, b))
}

fn failbox() -> BBox
{
    @bbox(@point1(@pos_infinity()), @point1(@neg_infinity()))
}

fn bbextend(BBox bb, p : Point) -> BBox
{
    bbox(ppmin(bb.cmin, p), ppmax(bb.cmax, p))
}
