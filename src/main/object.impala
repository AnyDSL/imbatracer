struct Object
{
    nTriVerts : uint,
    triVertsBegin : uint,
    // TODO: instance matrix?
}

fn objIntersectFirst(objidx : uint, scene : &Scene, isec : &Intersection) -> ()
{
    let obj = (*scene).objs(objidx);
    for tri in urange(obj.triVertsBegin, obj.triVertsBegin+obj.nTriVerts)
    {
        triIntersectFirst(tri, scene, isec)
    }
}
