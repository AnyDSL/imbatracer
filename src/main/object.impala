fn objIntersectFirst(objidx : uint, scene : &Scene, isec : &Intersection) -> ()
{
    // FIXME without the $, stuff gets slow in compilation, and emits even more "warning: slow"
    $bvhIntersectFirst((*scene).objs(objidx).bvhRoot, scene, isec)
}
