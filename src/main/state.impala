

struct State
{
    time : float,
    cam : Cam,
    integrator : Integrator,
    scene : RTScene,

    // Pointers for specific parts of the tracer
    pixelBuffer : &u8,
}

fn stateInit() -> &State
{
    let mut state = ~[1:State] as &State;
    state.time = 0.0f;
    state.pixelBuffer = 0 as &u8;
    state
}

struct RTState
{
    cam : Cam,
    integrator : Integrator,
    scene : RTScene,
}
