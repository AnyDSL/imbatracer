
struct Scene
{
    nTris : uint,
    verts : &[Point],
    triVerts : &[uint] // 3 successive entries are the three indices of the vertices of a triangle
}

fn compileScene(mut scene: Scene) -> fn(&Intersection) -> ()
{
    let scenePtr = &scene;
    |isec: &Intersection|->() {
        for tri in range(0, scene.nTris as int)
        {
            triIntersectFirst(tri as uint, scenePtr, isec)
        }
    }
}
